  <script>
    const floaters = document.getElementById('floaters');
    const modal = document.getElementById('modal');
    const result = document.getElementById('result');

    const theirName = document.getElementById('theirName');
    const forName = document.getElementById('forName');

    let heartsOn = true;
    let heartCount = 16;

    function addHearts(n){
      floaters.innerHTML = "";
      const w = window.innerWidth;
      for(let i=0;i<n;i++){
        const h = document.createElement('div');
        h.className = 'fHeart';
        const left = Math.random() * w;
        const size = 8 + Math.random() * 18;
        const dur = 4 + Math.random() * 6;
        const delay = Math.random() * 4;
        h.style.left = left + "px";
        h.style.bottom = (-20 - Math.random()*80) + "px";
        h.style.width = size + "px";
        h.style.height = size + "px";
        h.style.animationDuration = dur + "s";
        h.style.animationDelay = delay + "s";
        h.style.opacity = .6 + Math.random() * .4;
        floaters.appendChild(h);
      }
    }

    addHearts(heartCount);

    document.getElementById('openBtn').addEventListener('click', () => modal.showModal());
    document.getElementById('closeBtn').addEventListener('click', () => modal.close());

    document.querySelectorAll('.choice').forEach(btn => {
      btn.addEventListener('click', () => {
        result.textContent = btn.getAttribute('data-msg');
      });
    });

    document.getElementById('toggleHearts').addEventListener('click', () => {
      heartsOn = !heartsOn;
      if(!heartsOn){ floaters.innerHTML = ""; return; }
      heartCount = Math.min(40, heartCount + 10);
      addHearts(heartCount);
    });

    document.getElementById('editBtn').addEventListener('click', () => {
      const a = prompt("Their name?", theirName.textContent) || theirName.textContent;
      const b = prompt("Display name (top right)?", forName.textContent) || forName.textContent;
      theirName.textContent = a;
      forName.textContent = b;
    });

    window.addEventListener('resize', () => { if(heartsOn) addHearts(heartCount); });
  </script>
</body>
